<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meng.testspringboot2.mapper.User2Mapper">
    <resultMap id="user2map" type="User2">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="birthday" property="birthday"/>
        <result column="sex" property="sex"/>
        <result column="address" property="address"/>
        <collection property="accounts" ofType="Account2">
            <id column="aid" property="id"/>
            <result column="uid" property="uid"/>
            <result column="money" property="money"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="user2map">
        select u.*,a.id as aid,
         a.uid as uid,
         a.money as money
         from user2 u left outer join account2 a on u.id = a.uid
    </select>
</mapper>